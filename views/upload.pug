extends layout

block content
  .form.container
    form(action='/pictureUpload', method='POST', enctype='multipart/form-data')
      input(type='file' id="photo" name='path' accept='image/png image/jpeg' required style={padding: "20px 0"})
      textarea(name='caption', placeholder='Write a caption...', maxlength='140')
      input(type='submit', value='Share')
